#header {
    max-width: 960px;
    display: flex;
    align-items: center;
}
    

.btn {
  text-decoration: none;
  font: 600 2rem/1 futura;
  padding: 0.8em 1em;
  background-color: #fff;
  border: 4px solid black;
  border-radius: 16px;
  color: black;
  cursor: pointer;
  box-shadow: 4px 4px 0 black;
}
/* 右下へ移動と影を消す */
.btn:hover {
  transform: translate(4px, 4px);
  box-shadow: none;
}
/* 押し込んだときに内側に影 */
.btn:active {
  box-shadow: inset 4px 4px 0 black;
}
/* テキストが凹む動き */
.btn:active span {
  display: block;
  transform: translate(4px, 4px);
}
